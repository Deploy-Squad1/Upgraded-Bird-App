[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User={{ app_secret_key }}
Group=www-data
WorkingDirectory=/home/{{ app_secret_key }}/bird_app/flask_app
ExecStart=/home/{{ app_secret_key }}/bird_app/flask_app/venv/bin/gunicorn \
--bind 0.0.0.0:5000 \
app:app

[Install]
WantedBy=multi-user.target